<header>
  <%= render 'layouts/navbar2'%>
</header>
<div class="container mb-4 p-5 text-center">
<h2>Merci Pour vos achats!</h2>
  <h3>Récapitulatif de votre commande</h3>
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col"> </th>
                            <th scope="col">Produit</th>
                            <th scope="col">Prix</th>
                            
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @cart.line_items.each do |p| %>
                        <tr>
                            <td><%= image_tag p.product.image, alt: 'cat-image', class: "card-img-top card-img"  %> </td>
                            <td><%= p.product.title%></td>
                            
                            
                            <td class="text-right"><%= p.total%>€</td>
                            
                        </tr>
                    <% end %>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col mb-2">
            <div class="row">
                <h4> Vous avez payé <strong> <%= @cart.total %> €</strong></h4>
            </div>
        </div>
    </div>
</div>
<%= link_to "Retour à la page d'acceuil", carts_path, method: :post, class: 'btn btn-outline-danger w-25 mx-auto mb-5'%>

</main>


<%= render 'layouts/footer'%>