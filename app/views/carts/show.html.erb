
<%= render 'layouts/navbar'%>
<%= render 'shared/ban'%>
<div class="container mb-4">
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col"> </th>
                            <th scope="col">Produit</th>
                            <th scope="col">Disponible</th>
                            <th scope="col" class="text-center">Quantité</th>
                            <th scope="col" class="text-right" style="width: 100px;">Prix</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @cart.line_items.each do |p| %>
                        <tr>
                            <td><%= image_tag p.product.image, alt: 'cat-image', class: "card-img-top card-img"  %> </td>
                            <td><%= p.product.title%></td>
                            <td>En stock</td>
                            <td><input class="form-control" type="text" value="<%= p.quantity%>" /></td>
                            <td class="text-right"><%= p.total%> €</td>
                            <td class="text-right">
                                <%= link_to ('<i class="fa fa-trash"></i>').html_safe, line_item_path(p), method: 'DELETE'%> 
                            </td>
                        </tr>
                    <% end %>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><strong>Total</strong></td>
                            <td class="text-right"><strong><%= @cart.total%> </strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col mb-2">
            <div class="row">
                <div class="col-sm-12  col-md-6">
                    <%= link_to 'Continuer le shopping', products_path, class: 'btn btn-block btn-light'%>
                </div>
                <div class="col-sm-12 col-md-6 text-right">
                    <%= link_to 'Confirmer la commande', new_cart_charge_path(@cart), class: "btn btn-lg btn-block btn-success "%>
                </div>
            </div>
        </div>
    </div>
</div>
</main>


  <%= render 'layouts/footer'%>
